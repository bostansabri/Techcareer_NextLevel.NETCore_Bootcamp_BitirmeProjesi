@using Survey.MVC.Models.DTOs;
@model SigninDTO
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #6A6A6A
        }
    </style>
</head>
<body>
    <div class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-controller="Signin" asp-action="Index" method="post">

                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">
                                <div class="mb-md-5 mt-md-4 pb-5">

                                    <h2 class="fw-bold mb-2 text-uppercase">Sign In</h2>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Surname" class="form-control form-control-lg" placeholder="Surname" />
                                        <span asp-validation-for="Surname" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="RePasword" class="form-control form-control-lg" placeholder="RePasword" />
                                        <span asp-validation-for="RePasword" class="text-danger"></span>
                                    </div>

                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
                                </div>
                                <div>
                                    <p class="mb-0">
                                        Do you have an account? <a class="text-white-50 fw-bold" asp-controller="Login" asp-action="Index">Login</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
