@using TechSurvey.MVC.Models.DTOs;
@model LoginDTO
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #6A6A6A
        }
    </style>
</head>
<body>
    <div class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-controller="Login" asp-action="Index" method="post">
                        
                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">

                                <div class="mb-md-5 mt-md-4 pb-5">
                                    
                                    <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                    <p class="text-white-50 mb-5">Please Enter Your Email Address and Password!</p>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                                        <label class="form-check-label">
                                            Remember Me
                                        </label>
                                    </div>

                                    <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>
                                    <div>
                                        <button type="submit" class="btn btn-outline-light btn-lg px-5">Login</button>
                                    </div>

                                </div>

                                <div>
                                    <p class="mb-0">
                                        Don't have an account? <a class="text-white-50 fw-bold" asp-controller="Signin" asp-action="Index">Sign In</a>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
