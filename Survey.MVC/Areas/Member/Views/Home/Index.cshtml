@{
    Layout = null;
}

<link href="~/homepagetemplate/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link href="~/homepagetemplate/css/tiny-slider.css" rel="stylesheet">
<link href="~/homepagetemplate/css/style.css" rel="stylesheet">

<div class="blog-section">
    <h1 style="text-align: center">Welcome</h1>
    <br />
    <div class="container">
        <div class="row">

            <div class="col-12 col-sm-6 col-md-4 mb-5">
                <div class="post-entry">
                    <a class="post-thumbnail" asp-area="Member" asp-controller="MSurvey" asp-action="Create"><img src="~/homepagetemplate/images/Survey.png" alt="Image" class="img-fluid"></a>
                    <div class="post-thumbnail">
                        <h3><a asp-area="Member" asp-controller="MSurvey" asp-action="Create">Create a Survey</a></h3>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-4 mb-5">
                <div class="post-entry">
                    <a class="post-thumbnail" asp-area="Member" asp-controller="MUser" asp-action="Index"><img src="~/homepagetemplate/images/Survey.png" alt="Image" class="img-fluid"></a>
                    <div class="post-thumbnail">
                        <h3><a asp-area="Member" asp-controller="MUser" asp-action="Index">Manage Account</a></h3>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-4 mb-5">
                <div class="post-entry">
                    <a class="post-thumbnail" asp-area="default" asp-controller="Login" asp-action="Logout"><img src="~/homepagetemplate/images/Survey.png" alt="Image" class="img-fluid"></a>
                    <div class="post-thumbnail">
                        <h3><a asp-area="default" asp-controller="Login" asp-action="Logout">Log Out</a></h3>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

<script src="~/homepagetemplate/js/bootstrap.bundle.min.js"></script>
<script src="~/homepagetemplate/js/tiny-slider.js"></script>
<script src="~/homepagetemplate/js/custom.js"></script>